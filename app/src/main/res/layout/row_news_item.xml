<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/txtTitle"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Yet another Zomato co-founder leaves the firm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txtDescription"
        android:layout_marginTop="@dimen/_5sdp"
        tools:text="Gunjan Patidar is the fourth Zomato co-founder to resign from the Indian food delivery firm, whose shares are down over 55% in a year."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtSource"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:background="@color/black"
            android:textSize="@dimen/_9sdp"
            android:text="Source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:textSize="@dimen/_9sdp"
            android:id="@+id/txtAuthor"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:background="@color/orange"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/_9sdp"
            android:id="@+id/txtDate"
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="2023-01-02T14:33:22Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>